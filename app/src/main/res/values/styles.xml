<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="CapstoneTheme" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:colorButtonNormal">@color/capstoneBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>
</resources>
